{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block body %}
<h1>{{ controller_name }}</h1>

<div class="container mt-5">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="card-title mb-0">{{user.FirstName}} {{user.LastName}}</h2>
            <a href="{{path('app_user_edit',{'id' : user.getId})}}" class="btn btn-link p-0" onclick="editUser()">
                <i data-feather="edit"></i>
            </a>
        </div>
        <div class="card-body">
            <p class="card-text"><strong>Email:</strong> {{user.email}}</p>
            <p class="card-text"><strong>Telefon:</strong> {{user.phone}}</p>
            <p class="card-text"><strong>Numer magazynu:</strong> {{user.ErpNumMag}}</p>
            <p class="card-text"><strong>Spos√≥b zatrudnienia:</strong> {{user.Employ.name}}</p>
            <hr>
            <h5><strong>Uwagi:</strong></h5>
            <p>{{user.Comments}}</p>
        </div>
    </div>
</div>



{% endblock %}