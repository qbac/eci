{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block body %}
    <h1>{{ controller_name }}</h1>
    <a class="btn btn-primary mt-3" href={{path("app_employ_add")}}>
        <span data-feather="package"></span>
            Dodaj
    </a>

<h2 class="mt-3"> Aktywne Sposoby zatrudnienia</h2>
<div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Nazwa</th>
              <th scope="col">Edycja</th>
            </tr>
          </thead>
          <tbody>
          {% for rowEmployActiva in employActive %}
          <tr>
              <td>{{rowEmployActiva.getName}}</td>
              <td>
                <a class="btn btn-primary" href={{path('app_employ_edit',{'id': rowEmployActiva.getId})}}>
                <span data-feather="edit"></span>Edytuj</a>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>

<h2 class="mt-3"> Nieaktywne Sposoby zatrudnienia</h2>
<div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Nazwa</th>
              <th scope="col">Edycja</th>
            </tr>
          </thead>
          <tbody>
          {% for rowEmployUnactiva in employUnactive %}
          <tr>
              <td>{{rowEmployUnactiva.getName}}</td>
              <td>
                <a class="btn btn-primary" href={{path('app_employ_edit',{'id': rowEmployUnactiva.getId})}}>
                <span data-feather="edit"></span>Edytuj</a>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
{% endblock %}
