{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block body %}
    <h1>{{ controller_name }}</h1>
    <a class="btn btn-primary mt-3" href={{path("app_project_add")}}>
        <span data-feather="package"></span>
            Dodaj projekt
    </a>

<h2 class="mt-3"> Aktywne Projekty</h2>
<div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Nazwa Projektu</th>
              <th scope="col">Data rozpoczęcia</th>
              <th scope="col">Data zakończenia</th>
              <th scope="col">Edycja</th>
            </tr>
          </thead>
          <tbody>
          {% for rowProjectActiva in projectActive %}
          <tr>
              <td>{{rowProjectActiva.getName}}</td>
              <td>{{rowProjectActiva.getDateStart | date('Y-m-d')}}</td>
              <td>{{rowProjectActiva.getDateEnd | date('Y-m-d')}}</td>
              <td>
                <a class="btn btn-primary mt-3" href={{path('app_project_edit',{'id': rowProjectActiva.getId})}}>
                <span data-feather="edit"></span>Edytuj</a>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>

<h2 class="mt-3"> Nieaktywne Projekty</h2>
<div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Nazwa Projektu</th>
              <th scope="col">Data rozpoczęcia</th>
              <th scope="col">Data zakończenia</th>
              <th scope="col">Edycja</th>
            </tr>
          </thead>
          <tbody>
          {% for rowProjectUnactiva in projectUnactive %}
          <tr>
              <td>{{rowProjectUnactiva.getName}}</td>
              <td>{{rowProjectUnactiva.getDateStart | date('Y-m-d')}}</td>
              <td>{{rowProjectUnactiva.getDateEnd | date('Y-m-d')}}</td>
              <td>
                <a class="btn btn-primary mt-3" href={{path('app_project_edit',{'id': rowProjectUnactiva.getId})}}>
                <span data-feather="edit"></span>Edytuj</a>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
{% endblock %}
