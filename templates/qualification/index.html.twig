{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block body %}
<h1>{{controller_name}}</h1>
<a class="btn btn-primary mt-3" title="Dodaj" href={{path("app_qualification_add")}}>
              <span data-feather="plus"></span>
              Dodaj
            </a>

<h2 class="mt-3"></h2>
      <div class="table-responsive">
        <table id="tab" class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Nazwa</th>
              <th scope="col">Przypomnienie [dni]</th>
              <th scope="col">Aktywne</th>
              <th scope="col">Edytuj</th>
            </tr>
          </thead>
          <tbody>
                    {% for listQualification in listQualifications %}
          <tr>
              <td class="col-sm-1">{{listQualification.id}}</td>
              <td class="col-sm-8">{{listQualification.Name}}</td>
              <td class="col-sm-2">{{listQualification.remindDaysBefore}}</td>
              <td class="col-sm-1">{{listQualification.active}}</td>
              <td>
              <a class="btn btn-primary" title="Edytuj" href={{path('app_qualification_edit',{'id' : listQualification.id})}}>
              <span data-feather="edit"></span></a>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
{% endblock %}